default: &default
  adapter: <%= @node['lodge']['database']['adapter'] %>
  host: <%= @node['lodge']['database']['host'] %>
  username: <%= @node['lodge']['database']['username'] %>
  password: <%= @node['lodge']['database']['password'] %>
  encoding: <%= @node['lodge']['database']['encoding'] %>
  pool: <%= @node['lodge']['database']['pool'] %>

development:
  <<: *default
  database: lodge_development

test:
  <<: *default
  database: lodge_test

production:
  <<: *default
  database: lodge_production
