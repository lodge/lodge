<!DOCTYPE html>
<html>
<head>
  <% if params[:controller] == "articles" && [:show, :edit].include?(params[:action].to_sym)   %>
    <title><%= @article.title %> - Lodge</title>
  <% else %>
    <title>Lodge</title>
  <% end %>
  <%= favicon_link_tag %>
  <%= javascript_tag "var ROOT_PATH = '#{root_path}';" %>
  <script type="text/javascript" charset="utf-8">var ROOT_PATH = '<%= root_path %>';</script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'notification', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if (lt IE 9) & (!IEMobile)]>
    <%= javascript_include_tag 'externals/html5shiv', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'externals/renspond.min', 'data-turbolinks-track' => true %>
  <![endif]-->
</head>
<body>

<div class="container">
  <div class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-4">
          <div class="navbar-header"><%= link_to "Lodge", root_path, class: ["nav", "navbar-brand"] %></div>
        </div>
        <div class="col-xs-8">
          <div class="row">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="dropdown">
                  <%= render partial: "users/info_dropdown", locals: {user: current_user} %>
                </li>
                <li class="dropdown">
                  <%= render partial: "notifications/info_dropdown", locals: {notifications: @notifications} %>
                </li>
                <li>
                  <%= link_to t("users.edit_profile"), edit_user_registration_path, :class => 'navbar-link' %>
                </li>
                <li><span class="navbar-text">|</span></li>
                <li>
                  <%= link_to t("users.logout"), destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                </li>
              <% else %>
                <li><%= link_to t("users.sign_up"), new_user_registration_path, :class => 'navbar-link'  %></li>
                <li><span class="navbar-text">|</span></li>
                <li><%= link_to t("users.login"), new_user_session_path, :class => 'navbar-link'  %></li>
              <% end %>
            </ul>
          </div>
          <div class="row">
            <p class="navbar-text navbar-right">
              <% if user_signed_in? %>
                <strong class="num-of-contribution"><%= current_user.contribution %></strong> <%= tco :contribution %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div>
        <% if notice %>
          <p id="notice" class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div>
      <% if current_user %>
        <div class="row">
          <%= form_tag articles_search_path, method: :get, id: "article-search-area", role: "search" do %>
            <div class="input-group col-xs-4 col-xs-offset-5">
              <%= text_field_tag "query", params[:query], class: ["form-control"], placeholder: tco("article_search") %> 
              <span class="input-group-btn">
                <%= button_tag "", type: "submit", class: ["btn", "btn-default", "glyphicon", "glyphicon-search"] %>
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
  
      <div class="row"><hr /></div>

      <div class="row">
        <article class="col-xs-9">
          <%= yield %>
        </article>
        
        <% if current_user %>
          <nav class="col-xs-3 well">
            <% # Stocked article list %>
            <h5><strong><%= tco("menu") %></strong></h5>
            <div>
              <ul>
                <li><u><%= link_to tco(:feed_article_list_title), articles_feed_path, data: {active: true}%></u></li>
                <li><u><%= link_to tco(:recent_article_list_title), articles_path %></u></li>
                <li><u><%= link_to tco("stocked_article_list_title"), articles_by_stocks_path %></u></li> 
                <li><u><%= link_to tco("user_article_list_title"), articles_by_user_path(current_user.id) %></u></li> 
                <li><u><%= link_to tco("tag_list_title"), tags_path %></u></li>
              </ul>
            </div>
  
            <hr />
    
            <% # Pupular article list %>
            <h5><strong><%= tco("popular_article_list_title") %></strong></h5>
            <div>
              <ol>
                <% @popular_articles.each do |article| %>
                  <li>
                    <u><%= link_to article.title, article_path(article) %></u>
                    <%= stock_and_count_link(article) %>
                  </li>
                <% end %>
              </ol>
            </div>
  
            <hr />
    
            <% # Stocked article list %>
            <h5><strong><%= tco("stocked_article_list_title") %></strong></h5>
            <div>
              <ol>
                <% @stocked_articles.each do |article| %>
                  <li><u><%= link_to article.title, article_path(article) %></u></li>
                <% end %>
              </ol>
              <% unless @stocked_articles.empty? %>
              <div class="clearfix">
                <%= link_to tco("more_display"), articles_by_stocks_path, class: ["pull-right"] %> 
              </div>
              <% end %>
            </div>
  
            <hr />
    
            <% # Your article list %>
            <h5><strong><%= tco("user_article_list_title") %></strong></h5>
            <div>
              <ol>
                <% @user_articles.each do |article| %>
                  <li><u><%= link_to article.title, article_path(article) %></u></li>
                <% end %>
              </ol>
              <% unless @user_articles.empty? %>
                <div class="clearfix">
                  <%= link_to tco("more_display"), articles_by_user_path(current_user.id), class: ["pull-right"] %> 
                </div>
              <% end %>
            </div>
          </nav>
    
        <% end %>
      </div>
    </div>
  </div>
</div>

</body>
</html>
