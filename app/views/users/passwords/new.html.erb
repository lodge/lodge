<h2><%= tc :new_password_title %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
  <%= devise_error_messages! %>

  <dl>
    <dt><%= f.label :email %></dt>
    <dd><%= f.email_field :email, autofocus: true, class: ["form-control"] %></dd>
  </dl>

  <div><%= f.submit tc(:submit_button), class: ["btn", "btn-success"] %></div>
<% end %>

<%= render "users/shared/links" %>
